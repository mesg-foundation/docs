@import './palette.styl'

.hero h1
  display none

img
  max-width 100%

header.navbar
  background-color $backgroundColor

  .links
    background-color transparent
  .site-name
    display none
  .nav-item > a, .repo-link, .dropdown-title
    color #eee
    &:hover, &.router-link-active
      color white
  .sidebar-button
    color #eee

.home .hero
  img
    margin-bottom 5em
    margin-top 5em
  h1
    display none

@media (max-width: $MQMobileNarrow)
  .content div[class*="language-"]
    margin auto

span.type {
  font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace;
  color: #4b2881;
  padding: 0.25rem 0.5rem;
  margin: 0;
  font-size: 0.85em;
  background-color: rgba(27,31,35,0.05);
  border-radius: 3px;
  display: flex;
  display: inline-flex;
}

.vue-tabs {
  margin-top: 1em;
}

.tab-content {
  border: solid 1px $borderColor;
  padding: 1em;
  border-radius: 0 3px 3px 3px;
  margin-top: 3px;
}

.nav.nav-tabs {
  margin: 0;
  padding: 0;

  li {
    border: solid 1px $borderColor;
    z-index: 2;
    border-radius: 3px 3px 0 0;
    list-style: none;
    margin-right: -1px;
    background: rgba(0, 0, 0, 0.015);
    cursor: pointer;
    padding: 0.5em 1em;
    display: inline;

    &.active {
      z-index: 2;
      border-bottom-color: white;
      background: white;
    }
    a:hover {
      text-decoration: none;
    }
  }
}

tr:nth-child(2n) {
  background: rgba(73, 30, 140, 0.05);
}
